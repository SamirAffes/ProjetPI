<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.testpifx.controllers.ProfileController"
            style="-fx-background-color: #f8f9fc;">

    <!-- Left Sidebar Navigation -->
    <left>
        <VBox styleClass="sidebar" style="-fx-background-color: linear-gradient(to bottom, #4e73df, #224abe); -fx-padding: 0; -fx-pref-width: 220;">
            <!-- Brand Logo and Title -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 15 20; -fx-background-color: rgba(0,0,0,0.1);">
                <Label text="👑" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-rotate: -15;"/>
                <Label text="SBAdmin" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </HBox>
            
            <Separator style="-fx-background-color: rgba(255,255,255,0.15);"/>
            
            <!-- Dashboard Link -->
            <HBox fx:id="dashboardMenuLink" alignment="CENTER_LEFT" spacing="10" styleClass="nav-item, sidebar-button"
                  style="-fx-padding: 12 15 12 20; -fx-cursor: hand;" onMouseClicked="#handleHome">
                <Label text="📊" style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 14px;"/>
                <Label text="Dashboard" style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 14px;"/>
            </HBox>
            
            <Separator style="-fx-background-color: rgba(255,255,255,0.15);"/>
            
            <Label text="PROFILE" style="-fx-text-fill: rgba(255,255,255,0.4); -fx-font-size: 11px; -fx-padding: 12 15 5 20; -fx-font-weight: bold;"/>
            
            <!-- Profile Link -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="nav-item, sidebar-button-active" 
                  style="-fx-padding: 12 15 12 20; -fx-background-color: rgba(255,255,255,0.1);">
                <Label text="🧑" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                <Label text="My Profile" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            </HBox>
            
            <!-- Logout Link -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="nav-item, sidebar-button"
                  style="-fx-padding: 12 15 12 20; -fx-cursor: hand;" onMouseClicked="#handleLogout">
                <Label text="🚪" style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 14px;"/>
                <Label text="Logout" style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 14px;"/>
            </HBox>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <!-- Collapse Sidebar Button -->
            <HBox alignment="CENTER" spacing="10" styleClass="btn, btn-icon, rounded-circle" 
                  style="-fx-padding: 15; -fx-background-color: rgba(0,0,0,0.1); -fx-cursor: hand;">
                <Circle radius="10" fill="rgba(255,255,255,0.1)"/>
                <Label text="←" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </left>
    
    <!-- Main Content Area -->
    <center>
        <VBox>
            <!-- Top Navigation Bar -->
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 12 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-border-color: #e8e8e8; -fx-border-width: 0 0 1 0;">
                <!-- Search Box -->
                <HBox spacing="5" alignment="CENTER" styleClass="search-box-container" style="-fx-padding: 5 10;">
                    <Label text="🔍" style="-fx-text-fill: #4e73df;"/>
                    <TextField promptText="Search..." styleClass="search-box-modern" style="-fx-pref-width: 200;"/>
                </HBox>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <!-- User Info -->
                <HBox alignment="CENTER" spacing="10" style="-fx-padding: 0 15;">
                    <Label text="Profile" style="-fx-text-fill: #5a5c69; -fx-font-weight: bold;"/>
                </HBox>
            </HBox>
            
            <!-- Profile Content -->
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-padding: 0; -fx-background: transparent;">
                <VBox spacing="25" style="-fx-padding: 25 30;">
                    <!-- Header -->
                    <HBox alignment="CENTER_LEFT">
                        <Label text="Profile" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #5a5c69;"/>
                    </HBox>
                    
                    <!-- Profile Content -->
                    <HBox spacing="25" VBox.vgrow="ALWAYS">
                        <!-- Left Column - Profile Picture & Details -->
                        <VBox spacing="20" minWidth="300" maxWidth="350">
                            <!-- Profile Picture Card -->
                            <VBox styleClass="card" style="-fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-padding: 20; -fx-border-color: #e3e6f0; -fx-border-width: 1; -fx-border-radius: 5; -fx-alignment: center;">
                                <Label text="Profile Picture" style="-fx-text-fill: #4e73df; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                                
                                <!-- Profile Image -->
                                <StackPane fx:id="profileImageView" style="-fx-background-color: #f8f9fc; -fx-background-radius: 75; -fx-min-width: 150; -fx-min-height: 150; -fx-max-width: 150; -fx-max-height: 150; -fx-alignment: center; -fx-margin: 15 0 0 0;">
                                    <Text text="👤" style="-fx-font-size: 80px; -fx-fill: #4e73df;"/>
                                    <VBox.margin>
                                        <Insets top="20" bottom="20"/>
                                    </VBox.margin>
                                </StackPane>
                                
                                <!-- Upload Button -->
                                <Button fx:id="uploadPhotoButton" text="Change Photo" onAction="#handleUploadPhoto" 
                                        styleClass="btn, btn-primary, btn-sm">
                                </Button>
                            </VBox>
                            
                            <!-- Progress Card -->
                            <VBox styleClass="card" style="-fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-padding: 20; -fx-border-color: #e3e6f0; -fx-border-width: 1; -fx-border-radius: 5;">
                                <HBox style="-fx-padding: 0 0 15 0;">
                                    <Label text="Account Details" style="-fx-text-fill: #4e73df; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                                </HBox>
                                
                                <VBox spacing="15">
                                    <!-- Progress Bars -->
                                    <VBox spacing="5">
                                        <HBox alignment="CENTER_LEFT">
                                            <Label text="Profile Completeness" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #5a5c69;"/>
                                            <Region HBox.hgrow="ALWAYS" />
                                            <Label fx:id="profileCompletenessValue" text="80%" style="-fx-text-fill: #5a5c69; -fx-font-weight: normal;"/>
                                        </HBox>
                                        <ProgressBar fx:id="profileCompletenessBar" progress="0.8" style="-fx-accent: #4e73df; -fx-pref-height: 8;" maxWidth="Infinity"/>
                                    </VBox>
                                    
                                    <VBox spacing="5">
                                        <HBox alignment="CENTER_LEFT">
                                            <Label text="Account Status" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #5a5c69;"/>
                                            <Region HBox.hgrow="ALWAYS" />
                                            <Label fx:id="accountStatusValue" text="Active" style="-fx-text-fill: #5a5c69; -fx-font-weight: normal;"/>
                                        </HBox>
                                        <ProgressBar fx:id="accountStatusBar" progress="1.0" style="-fx-accent: #1cc88a; -fx-pref-height: 8;" maxWidth="Infinity"/>
                                    </VBox>
                                </VBox>
                            </VBox>
                        </VBox>
                        
                        <!-- Right Column - User Info Forms -->
                        <VBox spacing="20" HBox.hgrow="ALWAYS">
                            <!-- User Information Card -->
                            <VBox styleClass="card" style="-fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-padding: 20; -fx-border-color: #e3e6f0; -fx-border-width: 1; -fx-border-radius: 5;">
                                <HBox style="-fx-padding: 0 0 15 0;">
                                    <Label text="User Information" style="-fx-text-fill: #4e73df; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                                </HBox>
                                
                                <GridPane hgap="15" vgap="20">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="50"/>
                                        <ColumnConstraints percentWidth="50"/>
                                    </columnConstraints>
                                    
                                    <!-- Username -->
                                    <VBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="0">
                                        <Label text="Username" style="-fx-text-fill: #5a5c69; -fx-font-weight: bold;"/>
                                        <TextField fx:id="usernameField" promptText="Username" 
                                                  style="-fx-background-color: #f8f9fc; -fx-border-color: #e3e6f0; -fx-border-radius: 5; -fx-padding: 8 10;"/>
                                    </VBox>
                                    
                                    <!-- Email -->
                                    <VBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="1">
                                        <Label text="Email Address" style="-fx-text-fill: #5a5c69; -fx-font-weight: bold;"/>
                                        <TextField fx:id="emailField" promptText="user@example.com" 
                                                  style="-fx-background-color: #f8f9fc; -fx-border-color: #e3e6f0; -fx-border-radius: 5; -fx-padding: 8 10;"/>
                                    </VBox>
                                    
                                    <!-- First Name -->
                                    <VBox spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="0">
                                        <Label text="First Name" style="-fx-text-fill: #5a5c69; -fx-font-weight: bold;"/>
                                        <TextField fx:id="firstNameField" promptText="First Name" 
                                                  style="-fx-background-color: #f8f9fc; -fx-border-color: #e3e6f0; -fx-border-radius: 5; -fx-padding: 8 10;"/>
                                    </VBox>
                                    
                                    <!-- Last Name -->
                                    <VBox spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="1">
                                        <Label text="Last Name" style="-fx-text-fill: #5a5c69; -fx-font-weight: bold;"/>
                                        <TextField fx:id="lastNameField" promptText="Last Name" 
                                                  style="-fx-background-color: #f8f9fc; -fx-border-color: #e3e6f0; -fx-border-radius: 5; -fx-padding: 8 10;"/>
                                    </VBox>
                                    
                                    <!-- Phone Number -->
                                    <VBox spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="0">
                                        <Label text="Phone Number" style="-fx-text-fill: #5a5c69; -fx-font-weight: bold;"/>
                                        <HBox spacing="5">
                                            <TextField fx:id="countryPrefixField" promptText="+1" 
                                                    style="-fx-background-color: #f8f9fc; -fx-border-color: #e3e6f0; -fx-border-radius: 5; -fx-padding: 8 10; -fx-pref-width: 60;"/>
                                            <TextField fx:id="phoneNumberField" promptText="Phone Number" 
                                                    style="-fx-background-color: #f8f9fc; -fx-border-color: #e3e6f0; -fx-border-radius: 5; -fx-padding: 8 10; -fx-pref-width: 140;" HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                    </VBox>
                                    
                                    <!-- Birthdate -->
                                    <VBox spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="1">
                                        <Label text="Birthdate" style="-fx-text-fill: #5a5c69; -fx-font-weight: bold;"/>
                                        <DatePicker fx:id="birthdateField" promptText="Select Date" 
                                                  style="-fx-background-color: #f8f9fc; -fx-border-color: #e3e6f0; -fx-border-radius: 5; -fx-padding: 4 10;"/>
                                    </VBox>
                                    
                                    <!-- Country -->
                                    <VBox spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="0">
                                        <Label text="Country" style="-fx-text-fill: #5a5c69; -fx-font-weight: bold;"/>
                                        <ComboBox fx:id="countryField" promptText="Select Country" 
                                                style="-fx-background-color: #f8f9fc; -fx-border-color: #e3e6f0; -fx-border-radius: 5; -fx-padding: 4 10;" maxWidth="Infinity"/>
                                    </VBox>
                                    
                                    <!-- Region -->
                                    <VBox spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="1">
                                        <Label text="Region/State" style="-fx-text-fill: #5a5c69; -fx-font-weight: bold;"/>
                                        <ComboBox fx:id="regionField" promptText="Select Region" 
                                                style="-fx-background-color: #f8f9fc; -fx-border-color: #e3e6f0; -fx-border-radius: 5; -fx-padding: 4 10;" maxWidth="Infinity"/>
                                    </VBox>
                                    
                                    <!-- Address -->
                                    <VBox spacing="5" GridPane.rowIndex="4" GridPane.columnIndex="0">
                                        <Label text="Address" style="-fx-text-fill: #5a5c69; -fx-font-weight: bold;"/>
                                        <TextField fx:id="addressField" promptText="Street Address" 
                                                  style="-fx-background-color: #f8f9fc; -fx-border-color: #e3e6f0; -fx-border-radius: 5; -fx-padding: 8 10;"/>
                                    </VBox>
                                    
                                    <!-- Zip Code -->
                                    <VBox spacing="5" GridPane.rowIndex="4" GridPane.columnIndex="1">
                                        <Label text="Zip Code" style="-fx-text-fill: #5a5c69; -fx-font-weight: bold;"/>
                                        <TextField fx:id="zipCodeField" promptText="Zip/Postal Code" 
                                                  style="-fx-background-color: #f8f9fc; -fx-border-color: #e3e6f0; -fx-border-radius: 5; -fx-padding: 8 10;"/>
                                    </VBox>
                                    
                                    <!-- Gender -->
                                    <VBox spacing="5" GridPane.rowIndex="5" GridPane.columnIndex="0">
                                        <Label text="Gender" style="-fx-text-fill: #5a5c69; -fx-font-weight: bold;"/>
                                        <ComboBox fx:id="genderField" promptText="Select Gender" 
                                                style="-fx-background-color: #f8f9fc; -fx-border-color: #e3e6f0; -fx-border-radius: 5; -fx-padding: 4 10;" maxWidth="Infinity"/>
                                    </VBox>
                                    
                                    <!-- Role Management -->
                                    <VBox spacing="5" GridPane.rowIndex="5" GridPane.columnIndex="1" fx:id="roleManagementContainer">
                                        <Label text="User Role" style="-fx-text-fill: #5a5c69; -fx-font-weight: bold;"/>
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <CheckBox fx:id="adminRoleCheckbox" text="Admin" />
                                            <CheckBox fx:id="managerRoleCheckbox" text="Manager" />
                                            <CheckBox fx:id="userRoleCheckbox" text="User" />
                                        </HBox>
                                    </VBox>
                                </GridPane>
                                
                                <HBox spacing="10">
                                    <Button text="Save Settings" styleClass="btn, btn-primary, btn-shadow-sm" onAction="#handleSave">
                                        <HBox.margin>
                                            <Insets top="20" />
                                        </HBox.margin>
                                    </Button>
                                    <Button text="Edit Profile" styleClass="btn, btn-info, btn-shadow-sm" onAction="#handleEditProfile">
                                        <HBox.margin>
                                            <Insets top="20" />
                                        </HBox.margin>
                                    </Button>
                                </HBox>
                            </VBox>
                            
                            <!-- Password Card -->
                            <VBox styleClass="card" style="-fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-padding: 20; -fx-border-color: #e3e6f0; -fx-border-width: 1; -fx-border-radius: 5;">
                                <HBox style="-fx-padding: 0 0 15 0;">
                                    <Label text="Change Password" style="-fx-text-fill: #4e73df; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                                </HBox>
                                
                                <VBox spacing="20">
                                    <!-- Current Password -->
                                    <VBox spacing="5">
                                        <Label text="Current Password" style="-fx-text-fill: #5a5c69; -fx-font-weight: bold;"/>
                                        <PasswordField fx:id="currentPasswordField" promptText="Enter current password" 
                                                      style="-fx-background-color: #f8f9fc; -fx-border-color: #e3e6f0; -fx-border-radius: 5; -fx-padding: 8 10;"/>
                                    </VBox>
                                    
                                    <HBox spacing="15">
                                        <!-- New Password -->
                                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                                            <Label text="New Password" style="-fx-text-fill: #5a5c69; -fx-font-weight: bold;"/>
                                            <PasswordField fx:id="newPasswordField" promptText="Enter new password" 
                                                          style="-fx-background-color: #f8f9fc; -fx-border-color: #e3e6f0; -fx-border-radius: 5; -fx-padding: 8 10;"/>
                                        </VBox>
                                        
                                        <!-- Confirm Password -->
                                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                                            <Label text="Confirm Password" style="-fx-text-fill: #5a5c69; -fx-font-weight: bold;"/>
                                            <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password" 
                                                          style="-fx-background-color: #f8f9fc; -fx-border-color: #e3e6f0; -fx-border-radius: 5; -fx-padding: 8 10;"/>
                                        </VBox>
                                    </HBox>
                                </VBox>
                                
                                <Button fx:id="saveButton" text="Update Password" onAction="#handleChangePassword"
                                        styleClass="btn, btn-info, btn-shadow-sm">
                                    <VBox.margin>
                                        <Insets top="20" />
                                    </VBox.margin>
                                </Button>
                            </VBox>
                            
                            <!-- Teams Card -->
                            <VBox styleClass="card" style="-fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-padding: 20; -fx-border-color: #e3e6f0; -fx-border-width: 1; -fx-border-radius: 5;">
                                <HBox style="-fx-padding: 0 0 15 0;">
                                    <Label text="My Teams" style="-fx-text-fill: #4e73df; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                                </HBox>
                                
                                <!-- Team count label -->
                                <Label fx:id="teamCountLabel" text="Your Teams:" style="-fx-text-fill: #5a5c69; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>
                                
                                <!-- Teams List -->
                                <ListView fx:id="teamListView" 
                                    style="-fx-background-color: white; -fx-border-color: #e3e6f0; -fx-border-radius: 5;" 
                                    minHeight="200" maxHeight="300" VBox.vgrow="ALWAYS"/>
                            </VBox>
                            
                            <!-- Buttons -->
                            <HBox spacing="15" alignment="CENTER_RIGHT">
                                <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"
                                        styleClass="btn, btn-light"/>
                            </HBox>
                        </VBox>
                    </HBox>
                    
                    <!-- Footer -->
                    <HBox alignment="CENTER" style="-fx-padding: 20 0;">
                        <Label text="Copyright © User Management System 2025" style="-fx-text-fill: #858796; -fx-font-size: 12px;"/>
                    </HBox>
                </VBox>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>