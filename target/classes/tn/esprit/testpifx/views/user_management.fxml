<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.testpifx.controllers.UserManagementController"
            stylesheets="@../styles/modern.css"
            styleClass="full-screen-container">

    <!-- Left Sidebar Navigation -->
    <left>
        <VBox styleClass="sidebar" style="-fx-background-color: linear-gradient(to bottom, #4e73df, #224abe); -fx-padding: 0; -fx-pref-width: 220;">
            <!-- Brand Logo and Title -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 15 20; -fx-background-color: rgba(0,0,0,0.1);">
                <Label text="👑" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-rotate: -15;"/>
                <Label text="SBAdmin" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </HBox>
            
            <Separator style="-fx-background-color: rgba(255,255,255,0.15);"/>
            
            <!-- Dashboard Link -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="nav-item, sidebar-button"
                  style="-fx-padding: 12 15 12 20; -fx-cursor: hand;" onMouseClicked="#handleHome">
                <Label text="📊" style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 14px;"/>
                <Label text="Dashboard" style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 14px;"/>
            </HBox>
            
            <Separator style="-fx-background-color: rgba(255,255,255,0.15);"/>
            
            <Label text="MANAGEMENT" style="-fx-text-fill: rgba(255,255,255,0.4); -fx-font-size: 11px; -fx-padding: 12 15 5 20; -fx-font-weight: bold;"/>
            
            <!-- User Management Link (active) -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="nav-item, sidebar-button-active" 
                  style="-fx-padding: 12 15 12 20; -fx-background-color: rgba(255,255,255,0.1);">
                <Label text="👥" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                <Label text="User Management" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            </HBox>
            
            <!-- Team Management Link -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="nav-item, sidebar-button"
                  style="-fx-padding: 12 15 12 20; -fx-cursor: hand;" onMouseClicked="#handleTeamManagement">
                <Label text="👪" style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 14px;"/>
                <Label text="Team Management" style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 14px;"/>
            </HBox>
            
            <!-- Profile Link -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="nav-item, sidebar-button"
                  style="-fx-padding: 12 15 12 20; -fx-cursor: hand;" onMouseClicked="#handleProfile">
                <Label text="🧑" style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 14px;"/>
                <Label text="My Profile" style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 14px;"/>
            </HBox>
            
            <!-- Logout Link -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="nav-item, sidebar-button"
                  style="-fx-padding: 12 15 12 20; -fx-cursor: hand;" onMouseClicked="#handleLogout">
                <Label text="🚪" style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 14px;"/>
                <Label text="Logout" style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 14px;"/>
            </HBox>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <!-- Collapse Sidebar Button -->
            <HBox alignment="CENTER" spacing="10" styleClass="btn, btn-icon, rounded-circle" 
                  style="-fx-padding: 15; -fx-background-color: rgba(0,0,0,0.1); -fx-cursor: hand;">
                <Circle radius="10" fill="rgba(255,255,255,0.1)"/>
                <Label text="←" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </left>

    <top>
        <HBox styleClass="header-modern">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Label text="User Management" styleClass="header-label">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <ProgressIndicator fx:id="loadingIndicator" visible="false" styleClass="progress-indicator"/>
            <Button fx:id="homeButton" text="Home" onAction="#handleHome" styleClass="secondary-button">
                <graphic>
                    <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                        <Image url="@../assets/icons/home.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button text="Logout" onAction="#handleLogout" styleClass="danger-button">
                <graphic>
                    <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                        <Image url="@../assets/icons/logout.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </top>

    <center>
        <VBox spacing="25" styleClass="dashboard-container">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- User Statistics Dashboard - Bootstrap Card Style -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <!-- Total Users Card -->
                <VBox styleClass="stat-card-modern" HBox.hgrow="ALWAYS">
                    <HBox styleClass="card-body" spacing="15" alignment="CENTER_LEFT">
                        <Circle radius="30" styleClass="icon-circle-primary" />
                        <VBox alignment="CENTER_LEFT">
                            <Label text="Total Users" styleClass="text-primary" />
                            <Label fx:id="totalUsersLabel" text="0" styleClass="stat-value-modern">
                                <font>
                                    <Font name="System Bold" size="22.0" />
                                </font>
                            </Label>
                        </VBox>
                    </HBox>
                    <ProgressBar progress="0.75" styleClass="progress-bar-primary" maxWidth="Infinity" />
                </VBox>
                
                <!-- Active Users Card -->
                <VBox styleClass="stat-card-modern" HBox.hgrow="ALWAYS">
                    <HBox styleClass="card-body" spacing="15" alignment="CENTER_LEFT">
                        <Circle radius="30" styleClass="icon-circle-success" />
                        <VBox alignment="CENTER_LEFT">
                            <Label text="Active Users" styleClass="text-success" />
                            <Label fx:id="activeUsersLabel" text="0" styleClass="stat-value-modern">
                                <font>
                                    <Font name="System Bold" size="22.0" />
                                </font>
                            </Label>
                        </VBox>
                    </HBox>
                    <ProgressBar progress="0.5" styleClass="progress-bar-success" maxWidth="Infinity" />
                </VBox>
                
                <!-- Admin Users Card -->
                <VBox styleClass="stat-card-modern" HBox.hgrow="ALWAYS">
                    <HBox styleClass="card-body" spacing="15" alignment="CENTER_LEFT">
                        <Circle radius="30" styleClass="icon-circle-info" />
                        <VBox alignment="CENTER_LEFT">
                            <Label text="Admin Users" styleClass="text-info" />
                            <Label fx:id="adminUsersLabel" text="0" styleClass="stat-value-modern">
                                <font>
                                    <Font name="System Bold" size="22.0" />
                                </font>
                            </Label>
                        </VBox>
                    </HBox>
                    <ProgressBar progress="0.25" styleClass="progress-bar-info" maxWidth="Infinity" />
                </VBox>
            </HBox>

            <!-- User Table Section - Bootstrap Card Style -->
            <VBox styleClass="card-table" VBox.vgrow="ALWAYS">
                <HBox styleClass="card-header" alignment="CENTER_LEFT">
                    <Label text="User Directory" styleClass="text-primary">
                        <font>
                            <Font size="18.0" name="System Bold" />
                        </font>
                    </Label>
                    <Region HBox.hgrow="ALWAYS" />
                    <HBox spacing="15" alignment="CENTER_RIGHT">
                        <HBox styleClass="search-box-container" alignment="CENTER_LEFT">
                            <TextField fx:id="searchField" promptText="Search users..." styleClass="search-box-modern" onKeyReleased="#handleSearch" />
                            <Button styleClass="search-button">
                                <graphic>
                                    <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                                        <Image url="@../assets/icons/search.png" />
                                    </ImageView>
                                </graphic>
                            </Button>
                        </HBox>
                        <!-- Filter Dropdowns in a nice container -->
                        <VBox spacing="8" alignment="CENTER_LEFT">
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <!-- Role Filter Dropdown -->
                                <HBox alignment="CENTER_LEFT" spacing="5">
                                    <Label text="Role:" styleClass="text-primary" />
                                    <ComboBox fx:id="roleFilterComboBox" promptText="All Roles" styleClass="entries-combo" prefWidth="120" />
                                </HBox>
                                <!-- Team Filter Dropdown -->
                                <HBox alignment="CENTER_LEFT" spacing="5">
                                    <Label text="Team:" styleClass="text-primary" />
                                    <ComboBox fx:id="teamFilterComboBox" promptText="All Teams" styleClass="entries-combo" prefWidth="140" />
                                </HBox>
                                <!-- Region Filter Dropdown -->
                                <HBox alignment="CENTER_LEFT" spacing="5">
                                    <Label text="Region:" styleClass="text-primary" />
                                    <ComboBox fx:id="regionFilterComboBox" promptText="All Regions" styleClass="entries-combo" prefWidth="140" />
                                </HBox>
                            </HBox>
                        </VBox>
                        <ComboBox fx:id="entriesComboBox" promptText="10" styleClass="entries-combo" prefWidth="80" />
                        <Button text="Add New User" onAction="#handleAddUser" styleClass="btn-primary">
                            <graphic>
                                <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                                    <Image url="@../assets/icons/add-user.png"/>
                                </ImageView>
                            </graphic>
                        </Button>
                    </HBox>
                </HBox>
                
                <TableView fx:id="usersTable" VBox.vgrow="ALWAYS" styleClass="table-modern">
                    <columns>
                        <TableColumn fx:id="usernameColumn" text="Username" prefWidth="150" />
                        <TableColumn fx:id="emailColumn" text="Email" prefWidth="220" />
                        <TableColumn fx:id="rolesColumn" text="Role" prefWidth="120" />
                        <TableColumn fx:id="countryColumn" text="Country" prefWidth="120" />
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
                        <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="180" />
                    </columns>
                    <placeholder>
                        <Label text="No users found" />
                    </placeholder>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                
                <!-- Footer with Pagination Controls - Bootstrap Style -->
                <HBox styleClass="card-footer" alignment="CENTER_LEFT">
                    <Label fx:id="pageInfoLabel" text="Showing 1 to 10 of 0 entries" />
                    <Region HBox.hgrow="ALWAYS" />
                    <HBox styleClass="pagination-modern" spacing="5">
                        <Button text="Previous" fx:id="prevButton" onAction="#handlePreviousPage" styleClass="pagination-button-modern" />
                        <HBox fx:id="pageButtonsContainer" spacing="5" />
                        <Button text="Next" fx:id="nextButton" onAction="#handleNextPage" styleClass="pagination-button-modern" />
                    </HBox>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
