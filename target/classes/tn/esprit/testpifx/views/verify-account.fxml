<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.testpifx.controllers.VerifyAccountController"
           style="-fx-background-color: linear-gradient(to bottom right, #4e73df, #224abe);">

    <BorderPane>
        <center>
            <HBox alignment="CENTER" styleClass="card" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);" maxWidth="900" maxHeight="500">
                <!-- Left side - Gradient Background -->
                <StackPane HBox.hgrow="ALWAYS" style="-fx-background-color: linear-gradient(to bottom right, #4e73df, #224abe); -fx-background-radius: 10 0 0 10;" minWidth="450">
                    <VBox alignment="CENTER" spacing="20">
                        <Text text="âœ…" style="-fx-font-size: 60px;" fill="WHITE" />
                        <Text text="Account Verification" fill="WHITE" style="-fx-font-size: 24px; -fx-font-weight: bold;" textAlignment="CENTER" />
                        <Text text="Your account is being verified. Please wait a moment." fill="WHITE" style="-fx-font-size: 16px;" textAlignment="CENTER" />
                    </VBox>
                </StackPane>
                
                <!-- Right side - Verification Status -->
                <VBox alignment="CENTER" spacing="30" HBox.hgrow="ALWAYS" style="-fx-background-radius: 0 10 10 0;">
                    <padding>
                        <Insets top="40" right="50" bottom="40" left="50" />
                    </padding>
                    
                    <!-- Icon -->
                    <StackPane styleClass="icon-circle" style="-fx-background-color: #f8f9fc; -fx-background-radius: 50; -fx-min-width: 80; -fx-min-height: 80; -fx-max-width: 80; -fx-max-height: 80;">
                        <Text text="ðŸ”" style="-fx-font-size: 40px;" />
                    </StackPane>
                    
                    <!-- Title -->
                    <Label text="Account Verification" 
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #5a5c69;" />
                    
                    <!-- Status Message -->
                    <Label fx:id="statusLabel" text="Verifying your account..." textAlignment="CENTER" wrapText="true" 
                           style="-fx-text-fill: #858796; -fx-font-size: 16px;" />
                    
                    <!-- Login Button -->
                    <Button fx:id="loginButton" text="Go to Login" onAction="#navigateToLogin" defaultButton="true" 
                            styleClass="btn, btn-primary"
                            style="-fx-pref-height: 50; -fx-background-radius: 25; -fx-pref-width: 250; -fx-font-size: 14px; -fx-font-weight: bold;">
                        <VBox.margin>
                            <Insets top="20" />
                        </VBox.margin>
                    </Button>
                </VBox>
            </HBox>
        </center>
    </BorderPane>
</StackPane>
