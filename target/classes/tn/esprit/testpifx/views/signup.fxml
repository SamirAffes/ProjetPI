<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.testpifx.controllers.SignupController"
           style="-fx-background-color: linear-gradient(to bottom right, #4e73df, #224abe);">

    <BorderPane>
        <center>
            <HBox alignment="CENTER" styleClass="card" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);" maxWidth="1000" maxHeight="700">                <!-- Left side - Image Section -->                <StackPane HBox.hgrow="ALWAYS" style="-fx-background-color: #f8f9fc; -fx-background-radius: 10 0 0 10;" minWidth="400">                    <ImageView fitWidth="400" preserveRatio="true" smooth="true">
                        <Image url="@../assets/icon-placeholder.png"/>
                    </ImageView>
                </StackPane>
                
                <!-- Right side - Registration Form -->
                <VBox alignment="CENTER" spacing="15" HBox.hgrow="ALWAYS" style="-fx-background-radius: 0 10 10 0;">
                    <padding>
                        <Insets top="40" right="50" bottom="40" left="50" />
                    </padding>
                    
                    <!-- Title -->
                    <Label text="Create an Account!" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #5a5c69;">
                        <VBox.margin>
                            <Insets bottom="20" />
                        </VBox.margin>
                    </Label>
                      <!-- Name Fields (Side by side) -->
                    <HBox spacing="10">
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="First Name" style="-fx-text-fill: #858796; -fx-font-size: 13px;"/>
                            <TextField fx:id="firstNameField" promptText="First Name" styleClass="form-control-user"
                                      style="-fx-pref-height: 45; -fx-font-size: 14px; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #e3e6f0;"/>
                        </VBox>
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="Last Name" style="-fx-text-fill: #858796; -fx-font-size: 13px;"/>
                            <TextField fx:id="lastNameField" promptText="Last Name" styleClass="form-control-user"
                                      style="-fx-pref-height: 45; -fx-font-size: 14px; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #e3e6f0;"/>
                        </VBox>
                    </HBox>
                    
                    <!-- Username Field -->
                    <VBox spacing="5">
                        <Label text="Username" style="-fx-text-fill: #858796; -fx-font-size: 13px;"/>
                        <TextField fx:id="usernameField" promptText="Enter Username" styleClass="form-control-user"
                                  style="-fx-pref-height: 45; -fx-font-size: 14px; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #e3e6f0;"/>
                    </VBox>
                    
                    <!-- Email Field -->
                    <VBox spacing="5">
                        <Label text="Email Address" style="-fx-text-fill: #858796; -fx-font-size: 13px;"/>
                        <TextField fx:id="emailField" promptText="Email Address" styleClass="form-control-user"
                                  style="-fx-pref-height: 45; -fx-font-size: 14px; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #e3e6f0;"/>
                    </VBox>
                    
                    <!-- Password Fields (Side by side) -->
                    <HBox spacing="10">
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="Password" style="-fx-text-fill: #858796; -fx-font-size: 13px;"/>
                            <PasswordField fx:id="passwordField" promptText="Password" styleClass="form-control-user"
                                          style="-fx-pref-height: 45; -fx-font-size: 14px; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #e3e6f0;"
                                          onKeyPressed="#handleEnterKeyPressed"/>
                        </VBox>
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="Repeat Password" style="-fx-text-fill: #858796; -fx-font-size: 13px;"/>
                            <PasswordField promptText="Repeat Password" styleClass="form-control-user"
                                          style="-fx-pref-height: 45; -fx-font-size: 14px; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #e3e6f0;"/>
                        </VBox>
                    </HBox>
                    
                    <!-- Register Button -->
                    <Button text="Register Account" onAction="#handleSignUp" defaultButton="true" styleClass="btn, btn-signup"
                            style="-fx-font-size: 14px; -fx-pref-height: 50; -fx-background-radius: 25; -fx-pref-width: 1000;">
                        <VBox.margin>
                            <Insets top="15" bottom="15" />
                        </VBox.margin>
                    </Button>
                    
                    <Separator />
                    
                    <!-- Alternative Registration Buttons -->
                    <Button text="Register with Google" styleClass="btn, btn-danger"
                            style="-fx-font-size: 14px; -fx-pref-height: 45; -fx-background-radius: 25;">
                        <graphic>
                            <Text text="G" style="-fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-fill: white;" />
                        </graphic>
                    </Button>
                    
                    <Button text="Register with Facebook" styleClass="btn, btn-primary"
                            style="-fx-font-size: 14px; -fx-pref-height: 45; -fx-background-radius: 25;">
                        <graphic>
                            <Text text="f" style="-fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-fill: white;" />
                        </graphic>
                        <VBox.margin>
                            <Insets top="10" bottom="10" />
                        </VBox.margin>
                    </Button>
                    
                    <Separator />
                    
                    <!-- Links -->
                    <HBox alignment="CENTER" spacing="5">
                        <Hyperlink text="Forgot Password?" style="-fx-text-fill: #4e73df; -fx-font-size: 13px;" />
                    </HBox>
                    
                    <!-- Login Link -->
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="Already have an account?" style="-fx-text-fill: #858796; -fx-font-size: 13px;" />
                        <Hyperlink text="Login!" onAction="#navigateToLogin" style="-fx-text-fill: #4e73df; -fx-font-size: 13px;" />
                    </HBox>
                </VBox>
            </HBox>
        </center>
    </BorderPane>
</StackPane>
