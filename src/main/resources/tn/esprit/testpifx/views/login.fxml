<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.testpifx.controllers.AuthController"
           style="-fx-background-color: linear-gradient(to bottom right, #4e73df, #224abe);">

    <BorderPane>
        <center>
            <HBox alignment="CENTER" styleClass="card" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);" maxWidth="1000" maxHeight="600">
                <!-- Left side - Replaced Image with Gradient Background -->
                <StackPane HBox.hgrow="ALWAYS" style="-fx-background-color: linear-gradient(to bottom right, #4e73df, #224abe); -fx-background-radius: 10 0 0 10;" minWidth="500">
                    <Text text="Welcome to JavaFX App" fill="WHITE" style="-fx-font-size: 24px; -fx-font-weight: bold;">
                        <StackPane.margin>
                            <Insets bottom="100" />
                        </StackPane.margin>
                    </Text>
                </StackPane>
                
                <!-- Right side - Login Form -->
                <VBox alignment="CENTER" spacing="15" HBox.hgrow="ALWAYS" style="-fx-background-radius: 0 10 10 0;">
                    <padding>
                        <Insets top="40" right="50" bottom="40" left="50" />
                    </padding>
                    
                    <!-- Logo or Icon -->
                    <StackPane styleClass="icon-circle" style="-fx-background-color: #f8f9fc; -fx-background-radius: 50; -fx-min-width: 80; -fx-min-height: 80; -fx-max-width: 80; -fx-max-height: 80;">
                        <Text text="ðŸ‘¤" style="-fx-font-size: 40px; -fx-fill: #4e73df;" />
                    </StackPane>
                    
                    <!-- Title -->
                    <Label text="Welcome Back!" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #5a5c69;">
                        <VBox.margin>
                            <Insets top="10" bottom="10" />
                        </VBox.margin>
                    </Label>
                    
                    <!-- Username Field -->
                    <TextField fx:id="usernameField" promptText="Enter Username" styleClass="form-control-user"
                              style="-fx-pref-height: 50; -fx-font-size: 14px; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #e3e6f0;">
                        <VBox.margin>
                            <Insets top="10" bottom="5" />
                        </VBox.margin>
                    </TextField>
                    
                    <!-- Password Field -->
                    <PasswordField fx:id="passwordField" promptText="Enter Password" styleClass="form-control-user"
                                   style="-fx-pref-height: 50; -fx-font-size: 14px; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #e3e6f0;"
                                   onKeyPressed="#handleEnterKeyPressed">
                        <VBox.margin>
                            <Insets top="5" bottom="10" />
                        </VBox.margin>
                    </PasswordField>
                      <!-- Remember Me Checkbox -->
                    <HBox alignment="CENTER_LEFT" spacing="5">
                        <CheckBox fx:id="rememberMeCheckBox" text="Remember Me" style="-fx-text-fill: #858796; -fx-font-size: 13px;" />
                    </HBox>
                    
                    <!-- Login Button -->
                    <Button text="LOGIN" onAction="#handleLogin" defaultButton="true" styleClass="btn, btn-login"
                            style="-fx-pref-height: 50; -fx-background-radius: 25; -fx-pref-width: 1000;">
                        <VBox.margin>
                            <Insets top="15" bottom="15" />
                        </VBox.margin>
                    </Button>
                    
                    <Separator />
                    
                    <!-- Alternative Login Buttons -->
                    <Button text="Login with Google" styleClass="btn, btn-danger"
                            style="-fx-font-size: 14px; -fx-pref-height: 50; -fx-background-radius: 25;">
                        <graphic>
                            <Text text="G" style="-fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-fill: white;" />
                        </graphic>
                    </Button>
                    
                    <Button text="Login with Facebook" styleClass="btn, btn-primary"
                            style="-fx-font-size: 14px; -fx-pref-height: 50; -fx-background-radius: 25;">
                        <graphic>
                            <Text text="f" style="-fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-fill: white;" />
                        </graphic>
                        <VBox.margin>
                            <Insets top="10" bottom="10" />
                        </VBox.margin>
                    </Button>
                    
                    <Separator />
                      <!-- Links -->
                    <HBox alignment="CENTER" spacing="5">
                        <Hyperlink text="Forgot Password?" onAction="#handleForgotPassword" style="-fx-text-fill: #4e73df; -fx-font-size: 13px;" />
                    </HBox>
                    
                    <!-- Register Link -->
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="Don't have an account?" style="-fx-text-fill: #858796; -fx-font-size: 13px;" />
                        <Hyperlink text="Create Account!" onAction="#navigateToSignup" style="-fx-text-fill: #4e73df; -fx-font-size: 13px;" />
                    </HBox>
                </VBox>
            </HBox>
        </center>
    </BorderPane>
</StackPane>
