<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.testpifx.controllers.ResetPasswordController"
           style="-fx-background-color: linear-gradient(to bottom right, #4e73df, #224abe);">

    <BorderPane>
        <center>
            <HBox alignment="CENTER" styleClass="card" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);" maxWidth="900" maxHeight="550">
                <!-- Left side - Gradient Background -->
                <StackPane HBox.hgrow="ALWAYS" style="-fx-background-color: linear-gradient(to bottom right, #4e73df, #224abe); -fx-background-radius: 10 0 0 10;" minWidth="450">
                    <VBox alignment="CENTER" spacing="20">
                        <Text text="🔑" style="-fx-font-size: 60px;" fill="WHITE" />
                        <Text text="Reset Your Password" fill="WHITE" style="-fx-font-size: 24px; -fx-font-weight: bold;" textAlignment="CENTER" />
                        <Text text="Choose a strong password to secure your account." fill="WHITE" style="-fx-font-size: 16px;" textAlignment="CENTER" />
                    </VBox>
                </StackPane>
                
                <!-- Right side - Reset Form -->
                <VBox alignment="CENTER" spacing="20" HBox.hgrow="ALWAYS" style="-fx-background-radius: 0 10 10 0;">
                    <padding>
                        <Insets top="40" right="50" bottom="40" left="50" />
                    </padding>
                    
                    <!-- Icon -->
                    <StackPane styleClass="icon-circle" style="-fx-background-color: #f8f9fc; -fx-background-radius: 50; -fx-min-width: 80; -fx-min-height: 80; -fx-max-width: 80; -fx-max-height: 80;">
                        <Text text="🔐" style="-fx-font-size: 40px;" />
                    </StackPane>
                    
                    <!-- Title -->
                    <Label text="Set New Password" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #5a5c69;" />
                    
                    <!-- Description -->
                    <Label text="Enter your new password below" textAlignment="CENTER" 
                           style="-fx-text-fill: #858796; -fx-font-size: 14px;" />
                    
                    <!-- Password Field -->
                    <PasswordField fx:id="passwordField" promptText="New Password" styleClass="form-control-user"
                                  style="-fx-pref-height: 50; -fx-font-size: 14px; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #e3e6f0; -fx-pref-width: 300;">
                        <VBox.margin>
                            <Insets top="10" bottom="5" />
                        </VBox.margin>
                    </PasswordField>
                    
                    <!-- Confirm Password Field -->
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" styleClass="form-control-user"
                                  style="-fx-pref-height: 50; -fx-font-size: 14px; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #e3e6f0; -fx-pref-width: 300;">
                        <VBox.margin>
                            <Insets top="5" bottom="10" />
                        </VBox.margin>
                    </PasswordField>
                    
                    <!-- Status Label -->
                    <Label fx:id="statusLabel" style="-fx-text-fill: #e74a3b; -fx-font-size: 13px;" />
                    
                    <!-- Reset Button -->
                    <Button fx:id="resetButton" text="Reset Password" onAction="#handleResetPassword" defaultButton="true" 
                            styleClass="btn, btn-primary"
                            style="-fx-pref-height: 50; -fx-background-radius: 25; -fx-pref-width: 300; -fx-font-size: 14px; -fx-font-weight: bold;">
                        <VBox.margin>
                            <Insets top="10" bottom="15" />
                        </VBox.margin>
                    </Button>
                    
                    <!-- Back to Login Link -->
                    <HBox alignment="CENTER" spacing="5">
                        <Hyperlink text="Back to Login" onAction="#navigateToLogin" style="-fx-text-fill: #4e73df; -fx-font-size: 13px;" />
                    </HBox>
                </VBox>
            </HBox>
        </center>
    </BorderPane>
</StackPane>
