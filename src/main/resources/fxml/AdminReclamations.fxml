<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" styleClass="content-container" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.AdminReclamationsController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Complaints Management" styleClass="title-label"/>
        <Region HBox.hgrow="ALWAYS"/>
        <ComboBox fx:id="statusFilter" promptText="Filter by Status"/>
    </HBox>
    
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox fx:id="reclamationsContainer" spacing="10"/>
    </ScrollPane>
</VBox>
