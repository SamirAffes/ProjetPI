<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="weatherWidget" spacing="5" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.WeatherWidgetController">

    <Label fx:id="cityLabel" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <FontIcon fx:id="weatherIcon" iconLiteral="fas-cloud" iconSize="32"/>
        <Label fx:id="temperatureLabel" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
    </HBox>

    <Label fx:id="descriptionLabel" style="-fx-font-size: 14;"/>
    <Label fx:id="adviceLabel" style="-fx-font-size: 12; -fx-text-fill: #666666;"/>

    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>
</VBox>
