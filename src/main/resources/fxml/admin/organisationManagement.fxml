<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.OrganisationManagementController">
    <children>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAddButtonClicked" prefHeight="40.0"
                        prefWidth="180.0" styleClass="button-primary" stylesheets="@../../styles/style.css">
                    <graphic>
                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label text="+" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                                <Label text="Ajouter Organisation" textFill="WHITE"/>
                            </children>
                        </HBox>
                    </graphic>
                </Button>
            </children>
            <VBox.margin>
                <Insets right="20.0"/>
            </VBox.margin>
        </HBox>
        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="500.0" VBox.vgrow="ALWAYS">
            <content>
                <FlowPane fx:id="organisationsContainer" hgap="20.0" prefHeight="200.0" prefWidth="200.0" vgap="20.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>
    </children>
</VBox>