<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ConducteurManagementController">
   <children>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <TextField fx:id="searchField" prefHeight="40.0" promptText="Rechercher un conducteur..." HBox.hgrow="ALWAYS" />
            <Button fx:id="addConducteurButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="180.0" styleClass="button-primary" stylesheets="@../../styles/style.css" text="Ajouter Conducteur" />
         </children>
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <TableView fx:id="conducteurTableView" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="nomColumn" prefWidth="100.0" text="Nom" />
          <TableColumn fx:id="prenomColumn" prefWidth="100.0" text="Prénom" />
          <TableColumn fx:id="cinColumn" prefWidth="100.0" text="CIN" />
          <TableColumn fx:id="permisColumn" prefWidth="100.0" text="N° Permis" />
          <TableColumn fx:id="dateNaissanceColumn" prefWidth="120.0" text="Date de naissance" />
          <TableColumn fx:id="vehiculeAssigneColumn" prefWidth="150.0" text="Véhicule assigné" />
          <TableColumn fx:id="actionsColumn" prefWidth="120.0" text="Actions" />
        </columns>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TableView>
   </children>
</VBox>