<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.Home"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #f0f0f0;">

    <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" 
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
          
        <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
        </padding>
        
        <Text text="Système de Gestion des Réclamations" styleClass="title-text">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Text>
        
        <Button fx:id="adminButton" text="Espace Admin" onAction="#handleAdminButton" 
                prefWidth="200.0" prefHeight="50.0" style="-fx-background-color: #4285F4; -fx-text-fill: white;">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        
        <Button fx:id="userButton" text="Espace Utilisateur" onAction="#handleUserButton" 
                prefWidth="200.0" prefHeight="50.0" style="-fx-background-color: #34A853; -fx-text-fill: white;">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
    </VBox>
</AnchorPane>
