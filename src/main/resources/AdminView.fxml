<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AdminController">
   <top>
      <HBox alignment="CENTER" prefHeight="80.0" spacing="10.0" style="-fx-background-color: #3f51b5;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Gestion des Réclamations - Interface Admin" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Filtrer par état:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="etatFilterComboBox" prefWidth="200.0" promptText="Tous les états" />
                  <Label text="Rechercher:">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="searchField" prefWidth="200.0" promptText="Rechercher par type..." />
                  <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#refreshList" style="-fx-background-color: #4285F4;" text="Actualiser" textFill="WHITE" />
                  <Button fx:id="returnButton" mnemonicParsing="false" onAction="#returnToHome" style="-fx-background-color: #9E9E9E;" text="Retour" textFill="WHITE">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="reclamationsTable" prefHeight="450.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="typeColumn" prefWidth="120.0" text="Type" />
                <TableColumn fx:id="descriptionColumn" prefWidth="200.0" text="Description" />
                <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Date" />
                <TableColumn fx:id="etatColumn" prefWidth="100.0" text="État" />
                <TableColumn fx:id="userIdColumn" prefWidth="80.0" text="Utilisateur" />
                <TableColumn fx:id="chauffeurIdColumn" prefWidth="80.0" text="Chauffeur" />
                <TableColumn fx:id="organismeIdColumn" prefWidth="80.0" text="Organisme" />
              </columns>
            </TableView>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="modifierButton" mnemonicParsing="false" onAction="#handleModifierButton" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #FFA000;" text="Modifier" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="supprimerButton" mnemonicParsing="false" onAction="#handleSupprimerButton" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #F44336;" text="Supprimer" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>