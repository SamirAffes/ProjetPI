<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"  stylesheets="@css/payment_form.css" fx:controller="controllers.PaymentController">
    <VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"

          spacing="15">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Payment Information" styleClass="form-section-title"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Email -->
            <Label text="Email"       GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtEmail"
                       promptText="you@domain.com"
                       GridPane.rowIndex="0"  GridPane.columnIndex="1"/>

            <!-- Full Name -->
            <Label text="Full Name"   GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtFullName"
                       promptText="FullName"
                       GridPane.rowIndex="1"  GridPane.columnIndex="1"/>

            <!-- Phone -->
            <Label text="Phone"       GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPhone"
                       promptText="+1-555-1234"
                       GridPane.rowIndex="2"  GridPane.columnIndex="1"/>

            <!-- Card Number -->
            <Label text="Card Number" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtCardNumber"
                       promptText="1234 5678 9012 3456"
                       GridPane.rowIndex="3"  GridPane.columnIndex="1"/>

            <!-- Card Expiry -->
            <Label text="Expiry (MM/YY)" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="txtCardExpiry"
                       promptText="MM/YY"
                       GridPane.rowIndex="4"  GridPane.columnIndex="1"/>

            <!-- Card CVV -->
            <Label text="CVV"         GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <PasswordField fx:id="txtCardCvv"
                           promptText="123"
                           GridPane.rowIndex="5"  GridPane.columnIndex="1"/>

            <!-- Calculated Amount -->
            <Label text="Amount"      GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <Label fx:id="lblAmount"  GridPane.rowIndex="6"  GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="0" bottom="0" left="0"/>
            </padding>
            <Button text="Cancel" onAction="#handleCancel"/>
            <Button text="Pay"    onAction="#handleSave"/>
        </HBox>
    </VBox>

</AnchorPane>
